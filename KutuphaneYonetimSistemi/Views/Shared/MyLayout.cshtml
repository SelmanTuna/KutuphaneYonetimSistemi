
@{
    ViewBag.Title = "Layout";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="fa fa-fw fa-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="fa fa-fw fa-list"></i> &nbsp; Kategoriler</a>
        <a href="/Kitap/Index/"><i class="fa fa-fw fa-book"></i> &nbsp; Kitaplar</a>
        <a href="/Yazar/Index/"><i class="fa fa-fw fa-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Uyeler/Index/"><i class="fa fa-address-card-o"></i> &nbsp; Üyeler</a>
        <a href="/Personel/Index/"><i class="fa fa-fw fa-user"></i> &nbsp; Personeller</a>
        <a href="#"><i class="fa fa-arrow-circle-right"></i> &nbsp; Ödünç Kitap Ver</a>
        <a href="#"><i class="fa fa-arrow-circle-left"></i> &nbsp; Ödünç Kitap Al</a>
        <a href="#"><i class="fa fa-euro"></i> &nbsp; Kasa</a>
        <a href="#"><i class="fa fa-stack-overflow"></i> &nbsp; İşlemler</a>
        <a href="#"><i class="fa fa-stack-image"></i> &nbsp; Galeri</a>
        <a href="#"><i class="fa fa-stack-showroom"></i> &nbsp; Vitrin</a>
        <a href="#"><i class="fa fa-gear"></i> &nbsp; Ayarlar</a>
        <a href="#"><i class="fa fa-heart"></i> &nbsp; Yardım</a>
        <a href="#"><i class="fa fa-sign-out"></i> &nbsp; Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
